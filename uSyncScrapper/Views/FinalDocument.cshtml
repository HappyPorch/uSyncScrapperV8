@model uSyncScrapper.Models.FinalDocument

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Technical Documentation</title>
    <style>
        body, h1, h2, h3, h4, p {
            font-family: Arial;
        }

        body {
            padding: 40px;
        }

        h1 {
            text-align: center;
        }

        h2 {
            padding-top: 30px;
        }

        h3 {
            background-color: #eee;
            padding: 10px ;
            margin-top:3em;
        }

        h5 {
            font-size: 0.9em;
            margin:0;
        }

        p.date {
            text-align: center;
            color: #999999;
        }
    </style>
</head>
<body>

    <h1>Website <br /> Technical Documentation</h1>
    <p class="date">@DateTime.Now.Date.ToShortDateString()</p>

    <p>This document contains technical documentation of selected features.</p>
    <h2>Contents</h2>

    <ul>
        @foreach (var item in Model.DocTypes)
        {
            <li><a href="#@item.Name">@item.Index. @item.Name</a></li>
        }
    </ul>
    <h2>Pages</h2>

    @Model.Body

</body>
</html>